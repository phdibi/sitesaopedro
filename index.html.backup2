    <script>
        // Lightbox Gallery
        const galleryImages = [
            {
                src: './trio braford.jpeg',
                title: 'Trio Reservado Grande Campeão Machos',
                description: 'Exposição Nacional 2024'
            },
            {
                src: 'https://images.unsplash.com/photo-1570042225831-d98fa7577f1e?w=1200',
                title: 'Campeão Hereford',
                description: 'Categoria Senior 2024'
            },
            {
                src: 'https://images.unsplash.com/photo-1516467508483-a7212febe31a?w=1200',
                title: 'Reservada Campeã',
                description: 'Fêmea Braford 2023'
            },
            {
                src: 'https://images.unsplash.com/photo-1500595046743-cd271d694d30?w=1200',
                title: 'Melhor Conjunto',
                description: 'Exposição Regional 2024'
            },
            {
                src: 'https://images.unsplash.com/photo-1548550023-2bdb3c5beed7?w=1200',
                title: 'Campeão Jovem',
                description: 'Categoria Junior 2023'
            },
            {
                src: 'https://images.unsplash.com/photo-1560780552-ba54683cb263?w=1200',
                title: 'Prêmio Especial',
                description: 'Melhor Criador 2024'
            }
        ];

        let currentImageIndex = 0;

        function openLightbox(index) {
            currentImageIndex = index;
            const lightbox = document.getElementById('lightbox');
            const img = document.getElementById('lightbox-img');
            const title = document.getElementById('lightbox-title');
            const description = document.getElementById('lightbox-description');

            img.src = galleryImages[index].src;
            title.textContent = galleryImages[index].title;
            description.textContent = galleryImages[index].description;

            lightbox.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeLightbox() {
            const lightbox = document.getElementById('lightbox');
            lightbox.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        function changeImage(direction) {
            currentImageIndex += direction;

            if (currentImageIndex >= galleryImages.length) {
                currentImageIndex = 0;
            } else if (currentImageIndex < 0) {
                currentImageIndex = galleryImages.length - 1;
            }

            const img = document.getElementById('lightbox-img');
            const title = document.getElementById('lightbox-title');
            const description = document.getElementById('lightbox-description');

            img.src = galleryImages[currentImageIndex].src;
            title.textContent = galleryImages[currentImageIndex].title;
            description.textContent = galleryImages[currentImageIndex].description;
        }

        // Fechar lightbox ao clicar fora da imagem
        document.getElementById('lightbox').addEventListener('click', function (e) {
            if (e.target === this) {
                closeLightbox();
            }
        });

        // Fechar lightbox com tecla ESC
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') {
                closeLightbox();
            } else if (e.key === 'ArrowLeft') {
                changeImage(-1);
            } else if (e.key === 'ArrowRight') {
                changeImage(1);
            }
        });

        // Otimização: Debounce para scroll events
        let scrollTimeout;
        const header = document.getElementById('header');

        window.addEventListener('scroll', function () {
            if (scrollTimeout) {
                window.cancelAnimationFrame(scrollTimeout);
            }
            scrollTimeout = window.requestAnimationFrame(function () {
                header.classList.toggle('scrolled', window.scrollY > 100);
            });
        }, { passive: true });

        // Smooth scroll otimizado
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Lazy loading para imagens (fallback para navegadores antigos)
        if ('loading' in HTMLImageElement.prototype) {
            const images = document.querySelectorAll('img[loading="lazy"]');
            images.forEach(img => {
                img.src = img.src;
            });
        } else {
            // Fallback: IntersectionObserver para navegadores antigos
            const script = document.createElement('script');
            script.src = 'https://cdnjs.cloudflare.com/ajax/libs/lazysizes/5.3.2/lazysizes.min.js';
            document.body.appendChild(script);
        }

        // Preconnect para recursos externos
        const preconnect = document.createElement('link');
        preconnect.rel = 'preconnect';
        preconnect.href = 'https://images.unsplash.com';
        document.head.appendChild(preconnect);
    </script>
